@model int


    <div class="btn-group" role="group">
        
        
            <a class="btn btn-primary text-white" asp-area="Admin" asp-controller="Questions" asp-action="Edit" asp-route-Id="@Model">
                <i class="far fa-edit"></i>
            </a>
        

        <a class="btn btn-success text-white" asp-area="Admin" asp-controller="Questions" asp-action="Details" asp-route-Id="@Model">
            <i class="fas fa-eye"></i>
        </a>

        
            <a class="btn btn-danger text-white" asp-area="Admin" asp-controller="Questions" asp-action="Delete" asp-route-Id="@Model">
                <i class="far fa-trash-alt"></i>
            </a>
        


    </div>

