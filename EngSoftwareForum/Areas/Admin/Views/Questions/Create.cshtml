@model Questions
@{ 
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Question</h2>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroudWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>

            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Question" class="col-form-label"></label>

            </div>
            <div>
                <textarea rows="10" cols="40" maxlength="500" asp-for="Question"></textarea>
            </div>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBacktoListButton">
            </div>

        </div>


    </div>
</form>