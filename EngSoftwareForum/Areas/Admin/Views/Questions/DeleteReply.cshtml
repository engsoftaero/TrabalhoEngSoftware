@model EngSoftwareForum.Models.Replies

@{
    ViewData["Title"] = "EditReply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Delete Reply</h2>
<br />

<form method="post" asp-action="DeleteReply">
    <div class="border backgroudWhite">

        <b>Delete your answer:</b><br />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">


            <div class="formulario">
                <textarea id="msg" rows="20" cols="100" maxlength="30000" readonly asp-for="ReplyString"></textarea>
            </div>
            <span asp-validation-for="ReplyString" class="text-danger"></span>

            <div class="formularioHide">
                <input asp-for="QuestionID" readonly class="form-control" />
                <input asp-for="ReplyId" readonly class="form-control" />
            </div>


        </div>

        <div class="form-group row">
            <div class="col-6 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.ReplyId" />
            </div>

        </div>


    </div>
</form>

