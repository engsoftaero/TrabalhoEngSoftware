@model EngSoftwareForum.Models.Questions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Edit Question</h2>
<br />

<form method="post" asp-action="Edit">
    <div class="border backgroudWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>

            </div>
            <div class="formulario">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Question" class="col-form-label"></label>

            </div>
            <div class="formulario">
                <textarea id="msg" rows="10" cols="98" maxlength="1500" asp-for="Question"></textarea>
            </div>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-4">
                <partial name="_EditAndBackToListButton" model="Model.Id" />
            </div>

        </div>


    </div>
</form>

