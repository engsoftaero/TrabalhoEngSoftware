@model EngSoftwareForum.Models.Questions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Question Details</h2>
<br />

<form method="post" asp-action="Details">
    <div class="border backgroudWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>

            </div>
            <div class="formulario">
                <input asp-for="Title" readonly class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Question" class="col-form-label"></label>

            </div>
            <div class="formulario">
                <textarea rows="10" cols="120" maxlength="1500" readonly asp-for="Question"></textarea>
            </div>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-4">
                <partial name="_AnswerAndBackToListButton" model="Model.Id" />
            </div>

        </div>


    </div>
</form>
